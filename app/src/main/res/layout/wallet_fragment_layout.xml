<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    android:gravity="center">

    <android.support.v7.widget.CardView
        app:cardCornerRadius="@dimen/dimen_16dp"
        android:layout_margin="8dp"
        android:padding="8dp"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        app:cardElevation="@dimen/dimen_16dp"
        android:outlineSpotShadowColor="@color/colorAccent">
        <android.support.v7.widget.LinearLayoutCompat
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            android:layout_margin="16dp"
            android:gravity="center">

            <TextView
                android:gravity="center"
                android:padding="8dp"
                android:textSize="18sp"
                android:background="@color/colorPrimary"
                android:textColor="@color/colorWhite"
                android:textStyle="bold"
                android:id="@+id/balance_text_view"
                android:layout_width="200dp"
                android:layout_height="wrap_content" />
            <Button
                android:textSize="16sp"
                android:padding="16dp"
                android:textColor="@color/colorWhite"
                android:layout_marginTop="5dp"
                android:background="@color/colorPrimary"
                android:layout_width="200dp"
                android:layout_height="wrap_content"
                android:id="@+id/add_points_button"
                android:text="Add Points"
                android:textStyle="bold"/>

            <Button
                android:textSize="16sp"
                android:padding="16dp"
                android:textColor="@color/colorWhite"
                android:layout_marginTop="5dp"
                android:background="@color/colorPrimary"
                android:layout_width="200dp"
                android:layout_height="wrap_content"
                android:id="@+id/withdrawal_points_button"
                android:text="Withdrawal Points"
                android:textStyle="bold"/>


            <Button
                android:textSize="16sp"
                android:padding="16dp"
                android:textColor="@color/colorWhite"
                android:layout_marginTop="5dp"
                android:background="@color/colorPrimary"
                android:layout_width="200dp"
                android:layout_height="wrap_content"
                android:id="@+id/transfer_points_button"
                android:text="Transfer Points"
                android:textStyle="bold"/>
        </android.support.v7.widget.LinearLayoutCompat>

    </android.support.v7.widget.CardView>
</LinearLayout>